<style type="text/css">

    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden;
        padding: 0;
        position: relative;
        width: 100%;
    }

    .responsive-ad__container {
        cursor: pointer;
        height: 100%;
        margin: 0 auto;
        {{#isLegacy}}
            max-width: 1520px;
        {{/isLegacy}}
        overflow: hidden;
        position: relative;
    }

    .responsive-ad__pixel-tracking {
        height: 1px;
        left: -1px;
        position: absolute;
        top: -1px;
        width: 1px;
        z-index: 0;
    }

    {{#backgroundImage}}
        .responsive-ad__background {
            {{#colour}}
                background-color: {{colour}}
            {{/colour}}
            {{#y}}
                background-position: 0 {{y}}%;
            {{/y}}
            {{#repeat}}
                background-repeat: repeat;
            {{/repeat}}
            {{^repeat}}
                background-repeat: no-repeat;
                background-size: 100% auto;
            {{/repeat}}
            height: 100%;
        }
    {{/backgroundImage}}
    {{^backgroundImage}}
        .responsive-ad__background {
            background-repeat: no-repeat;
            background-size: 100% auto;
            height: 100%;
        }
    {{/backgroundImage}}

    .responsive-ad__logo {
        opacity: 0;
        filter: alpha(opacity=0);
        position: absolute;
        -webkit-transition: opacity 0.3s ease-in-out,
                            left 0.3s ease-in-out,
                            top 0.3s ease-in-out;
        -moz-transition: opacity 0.3s ease-in-out,
                         left 0.3s ease-in-out,
                         top 0.3s ease-in-out;
        -ms-transition: opacity 0.3s ease-in-out,
                        left 0.3s ease-in-out,
                        top 0.3s ease-in-out;
        -o-transition: opacity 0.3s ease-in-out,
                       left 0.3s ease-in-out,
                       top 0.3s ease-in-out;
        transition: opacity 0.3s ease-in-out,
                    left 0.3s ease-in-out,
                    top 0.3s ease-in-out;
        visibility: hidden;
        z-index: 1;
    }
    .responsive-ad__logo--pause {
        z-index: 10;
    }

    /**
     * Hello confusion
     *
     * Mobile
     */
    .responsive-ad__logo--mobile.responsive-ad__logo--contracted {
        opacity: 1;
        filter: alpha(opacity=100);
        visibility: visible;
    }
    .is-expanded .responsive-ad__logo--mobile.responsive-ad__logo--contracted {
        opacity: 0;
        filter: alpha(opacity=0);
        visibility: hidden;
    }
    .is-expanded .responsive-ad__logo--mobile.responsive-ad__logo--expanded {
        opacity: 1;
        filter: alpha(opacity=100);
        visibility: visible;
    }
    @media screen and (min-width: 31.25em) {
        .responsive-ad__logo--mobile.responsive-ad__logo--contracted,
        .responsive-ad__logo--mobile.responsive-ad__logo--expanded {
            opacity: 0 !important;
            filter: alpha(opacity=0) !important;
            visibility: hidden !important;
        }
    }

    /**
     * Desktop
     */
    @media screen and (min-width: 31.25em) {
        .responsive-ad__logo--desktop.responsive-ad__logo--contracted {
            opacity: 1 !important;
            filter: alpha(opacity=100) !important;
            visibility: visible !important;
        }
        .is-expanded .responsive-ad__logo--desktop.responsive-ad__logo--contracted {
            opacity: 0 !important;
            filter: alpha(opacity=0) !important;
            visibility: hidden !important;
        }
        .is-expanded .responsive-ad__logo--desktop.responsive-ad__logo--expanded {
            opacity: 1 !important;
            filter: alpha(opacity=100) !important;
            visibility: visible !important;
        }
    }

    .responsive-ad__video {
        bottom: 0;
        left: 0;
        opacity: 0;
        filter: alpha(opacity=0);
        position: absolute;
        right: 0;
        top: 0;
        -webkit-transition: opacity 0.3s ease-in-out;
        -moz-transition: opacity 0.3s ease-in-out;
        -ms-transition: opacity 0.3s ease-in-out;
        -o-transition: opacity 0.3s ease-in-out;
        transition: opacity 0.3s ease-in-out;
        visibility: hidden;
        z-index: 2;
    }
    .responsive-ad__video--visible {
        opacity: 1;
        filter: alpha(opacity=100);
        visibility: visible;
    }
    .responsive-ad__video video,
    .responsive-ad__video div {
        width: 100%;
    }
    .responsive-ad__video__overlay {
        bottom: 0;
        left: 0;
        position: absolute;
        right: 0;
        top: 0;
        z-index: 2;
    }

</style>

<div class="responsive-ad__container">

    {{#backgroundImage}}
        <div class="responsive-ad__background" style="background-image:url('{{ url }}');"></div>
    {{/backgroundImage}}
    {{^backgroundImage}}
        <div class="responsive-ad__background"></div>
    {{/backgroundImage}}

    {{#logos}}
        <img class="responsive-ad__logo {{ cls }}" data-logo-index="{{ index }}" data-pausebutton="{{ isPauseButton }}" src="{{ url }}" />
    {{/logos}}

    {{#hasVideo}}
    <div class="responsive-ad__video">
        <div class="responsive-ad__video__overlay"></div>
    </div>
    {{/hasVideo}}

</div>